{% extends 'EnsJobeetBundle::layout.html.twig' %}
 
{% form_theme form _self %}
 
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <ul class="error_list">
            {% for error in errors %}
                <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}
 
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/ensjobeet/css/job.css') }}" type="text/css" media="all" />
{% endblock %}
 
{% block content %}
    <div class="col-xs-12">
        <h1>Job creation</h1>
    </div>
    <form action="{{ path('ens_job_create') }}" method="post" {{ form_enctype(form) }}>
        <div id="job_form">
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.category) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.category) }}
                {{ form_widget(form.category) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.type) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.type) }}
                {{ form_widget(form.type) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.company) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.company) }}
                {{ form_widget(form.company) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.file) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.file) }}
                {{ form_widget(form.file) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.url) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.url) }}
                {{ form_widget(form.url) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.position) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.position) }}
                {{ form_widget(form.position) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.location) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.location) }}
                {{ form_widget(form.location) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.description) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.how_to_apply) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.how_to_apply) }}
                {{ form_widget(form.how_to_apply) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.is_public) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.is_public) }}
                {{ form_widget(form.is_public) }}
            </div>
            <br class="clean"><br/>
            <div class="col-xs-12 col-sm-3">
                {{ form_label(form.email) }}
            </div>
            <div class="col-xs-12 col-sm-9">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <br class="clean">
            <br/>
            <div class="col-xs-12">
                <input type="submit" value="Preview your job" />
            </div>

        </div>
    {{ form_end(form) }}
{% endblock %}